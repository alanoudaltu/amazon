 ws as (
 select
          i_item_id,sum(ws_ext_sales_price) total_sales
 from
 	public.web_sales,
 	public.date_dim,
        public.customer_address,
         public.item
 where
         i_item_id               in (select
  i_item_id
from
 public.item
where i_category in ('Shoes'))
 and     ws_item_sk              = i_item_sk
 and     ws_sold_date_sk         = d_date_sk
