 select
          i_item_id,sum(cs_ext_sales_price) total_sales
 from
 	public.catalog_sales,
 	public.date_dim,
        public.customer_address,
         public.item
 where
         i_item_id               in (select
  i_item_id
from
 public.item
where i_category in ('Shoes'))
